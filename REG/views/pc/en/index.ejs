      function check_required () {
        if (    
              // ($("#notice_name").removeClass('on') && $("#proposer").val().trim() != "")
              // && ($("#notice_email").removeClass('on') && $("#email").val().trim() != "")
              // && ($("#notice_call_number").removeClass('on') && $("#pnumber_txt").val().trim() != "")
              // && ($("#notice_content").removeClass('on') && $("#summernote").val().trim() != "")
              ($("#proposer").val().trim() != "")
              && (/^[-A-Za-z0-9_]+[-A-Za-z0-9_.]*[@]{1}[-A-Za-z0-9_]+[-A-Za-z0-9_.]*[.]{1}[A-Za-z]+$/.test($("#email").val()))
