              ($("#pnumber_txt").val().trim().length <= 12) &&
              ($("#email").val().trim().length <= 80) &&
              ($("#company").val().trim().length <= 100) &&
              ($("#summernote").val().trim().length <= 500) &&

              $("#privacy_chk").is(":checked")
              // && console.log('1')
            ) 
        {
          $("#send_btn").attr('disabled', false);
          // $("#send_btn").css("background", "#4f6dfa");)
          return true;
        } else {
          // $("#send_btn").attr('disabled', true);
          // $("#send_btn").css("background", "#cccccc");
          return false;
        }
      }

      function send_inquiry () {
        if (!check_required()) {
          // alert('An error has occurred.\nSorry, please try again.');
          

          if ($("#proposer").val()) {
            var cnt = $("#proposer").val().length;
            $("#proposer").text(cnt);

            $('.input_box2 #proposer').parent().removeClass('warring');
            $('#notice_name').removeClass('on');

            if (cnt > 90) {
              $("#notice_name").addClass('on');
              $('#notice_name .overbalance').show();
              $('#notice_name .not_input').hide();
              $('.input_box2 #proposer').parent().addClass('warring');
            } else {
              $("#notice_name").removeClass('on');
              $('#notice_name .overbalance').hide();
              $('.input_box2 #proposer').parent().removeClass('warring');
            }
          } else {
            $('.input_box2 #proposer').parent().addClass('warring');
            $('#notice_name').addClass('on');
            $('#notice_name').find('.overbalance').hide();
            $('#notice_name .not_input').show();
          }

          if (/^[-A-Za-z0-9_]+[-A-Za-z0-9_.]*[@]{1}[-A-Za-z0-9_]+[-A-Za-z0-9_.]*[.]{1}[A-Za-z]+$/.test($("#email").val()) && $("#email").val().trim() != "") {
            var cnt = $("#email").val().length;
            $("#email").text(cnt);

            $('.input_box2 #email').parent().removeClass('warring');
            $('#notice_email').removeClass('on');

            if (cnt > 80) {
              $("#notice_email").addClass('on');
              $('#notice_email .overbalance').show();
              $('#notice_email .not_input').hide();
              $('.input_box2 #email').parent().addClass('warring');

            } else {
              $("#notice_email").removeClass('on');
              $('#notice_email .overbalance').hide();
              $('.input_box2 #email').parent().removeClass('warring');
            }
          } else {
            $('.input_box2 #email').parent().addClass('warring');
            $('#notice_email').addClass('on');
            $('#notice_email .not_input').show();
            $('#notice_email').find('.overbalance').hide();
          }

          if ($("#call_number").val().trim() != "") {
            var cnt = $("#call_number").val().length;
            $("#call_number").text(cnt);

            $('.input_box2 #call_number').parent().removeClass('warring');
            $('#notice_call_number').removeClass('on');
            
            if (cnt > 12) {
              $("#notice_call_number").addClass('on');
              $('#notice_call_number .overbalance').show();
              $('#notice_call_number .not_input').hide();
              $('.input_box2 #call_number').parent().addClass('warring');

            } else {
              $("#notice_call_number").removeClass('on');
              $('#notice_call_number .overbalance').hide();
              $('.input_box2 #call_number').parent().removeClass('warring');
            }

          } else {
            $('.input_box2 #call_number').parent().addClass('warring');
            $('#notice_call_number').addClass('on');
            $('#notice_call_number').find('.overbalance').hide();
            $('#notice_call_number .not_input').show();
          }

          if ($('.contact_area').val().trim() != "") {
            var cnt = $("#summernote").val().length;
            $("#summernote").text(cnt);

            $('.contact_area').removeClass('warring');
            $('#notice_content').removeClass('on');

            if (cnt > 500) {
              $("#notice_content").addClass('on');
              $('#notice_content .overbalance').show();
              $('#notice_content .not_input').hide();
              $('.contact_area').addClass('warring');
            } else {
              $("#notice_content").removeClass('on');
              $('#notice_content .overbalance').hide();
              // $('#notice_content .not_input').hide();
              $('.contact_area').removeClass('warring');
            }
          } else {
            $('.contact_area').addClass('warring');
            $('#notice_content').addClass('on');
            $('#notice_content').find('.overbalance').hide();
            $('#notice_content .not_input').show();
          }

          if ($("#privacy_chk").is(":checked") == false) {
              $("#privacy_chk").focus();
          }

          
          return;
        }
        limit_script_tag(document.getElementById('summernote'));

        $.ajax({
          url : '/ajax/inquiry',
          type : "POST",
          data : {name:$("#proposer").val(), 
                  email:$("#email").val(),
                  phone:$("#pnumber_txt").val() + "-" + $("#call_number").val(),
                  nations_seq:$("#dial_code option:selected").attr("nations_code"),                  
                  company:$("#company").val(),
                  message:$("#summernote").val()
                 },
          success : function(result) {
              if ($('.popup_layout').addClass('on')) {
                  $("#proposer").val("");
                  $("#email").val("");
                  $("#dial_code option:eq(0)").prop("selected", true); 
                  $("#pnumber_txt").val("Select");
                  $("#call_number").val("");
                  $("#company").val("");
                  $("#summernote").val("");
                  $("#privacy_chk").prop("checked", false);
                  check_required();
                  $('.contact_title2').show();

                  $('.confirm_btn').click(function() {
                    $('.popup_layout').removeClass('on');
                  });
              }
          },
          error : function() {
            $('.popup_layout').addClass('on');
            $('.fail').addClass('on');
            $('.success').addClass('off');
            $('.confirm_btn').click(function() {
                $('.popup_layout').removeClass('on');
                $('.fail').removeClass('on');
                $('.success').removeClass('off');
            });
          }
        });
      }

      function placeholder_clik() {
        $('.input_box2 .contact_title2').click(function() {
          $(this).hide();
          $(this).parent().find('input').focus();
        });

        $('.area_inquiry').click(function() {
            $('.contact_area').focus();
        })
      }

      function dial_click() {
        $('.dial_viewBox').click(function() {
            // $(this).hide();
            $('#dial_code').change();
        });
      }
    </script>
